from tkinter import *
from PIL import Image, ImageTk

def on_enter(event):
    button.config(image=root.Creat_Bild_active,)

def on_leave(event):
    button.config(image=root.Creat_Bild_inactive,)

def pressed():
    print('hello')

#### Farben
LGrey = '#1b1b1b'#'#545454'
DGrey = '#242424'
RGrey = '#2e2e2e'

root = Tk()
#root.title("Bussiness Athletics APP")
root.geometry("1280x720")

canvas_main = Canvas(root, bg=LGrey)
canvas_main.pack(fill=BOTH, expand=TRUE)

####Bilder
Creat_Bild_active = Image.open("Create_Athlete_active.png")
Creat_Bild_inactive = Image.open("Create_Athlete_inactive.png")

root.btn_active = ImageTk.PhotoImage(Creat_Bild_active)
root.btn_inactive = ImageTk.PhotoImage(Creat_Bild_inactive)

button = Button(root, image=root.btn_inactive, bg=LGrey, width=400, height=200, bd=0, relief='sunken',activebackground=LGrey, command=pressed)

canvas_main.create_window(640,360, window=button)

button.bind("<Enter>", on_enter)
button.bind("<Leave>", on_leave)

root.mainloop()