from tkinter import *
from PIL import Image, ImageTk


#### Farben
LGrey = '#1b1b1b'#'#545454'
DGrey = '#242424'
RGrey = '#2e2e2e'

root = Tk()
#root.title("Bussiness Athletics APP")
root.geometry("1280x720")
root.config(bg=LGrey)
root.title('Business Athletics')

#### Active Runder Knopf
def Active_Button(ButtonName,Canvas_Name,Frame,ImageName_Active,ImageName_Inctive,Commando,Color,ButtonOrder):
    Creat_Bild_active = Image.open(ImageName_Active)
    Creat_Bild_inactive = Image.open(ImageName_Inctive)

    Creat_Bild_active =  Creat_Bild_active.resize((200, 100))
    Creat_Bild_inactive =  Creat_Bild_inactive.resize((200, 100))

    Frame.btn_active = ImageTk.PhotoImage(Creat_Bild_active)
    Frame.btn_inactive = ImageTk.PhotoImage(Creat_Bild_inactive)

    def on_enter(self):
        ButtonName.config(image=Frame.btn_active)

    def on_leave(event):
        ButtonName.config(image=Frame.btn_inactive)

   
    ButtonName.config(image=Frame.btn_inactive, bg=Color, width=200, height=100, bd=0, relief='sunken',activebackground=LGrey, command=Commando)
    #ButtonName.pack()

    Canvas_Name.create_window(100,50, window=ButtonName)

    ButtonName.bind("<Enter>", on_enter)
    ButtonName.bind("<Leave>", on_leave)

### Button FUnktions

def Athlete_Window():
    Label_Athlete_Window = Label(Second_Fame,text='Create Athlete',bg=LGrey,fg='White',pady = 50,font=('Calibri', 15))
    Label_Athlete_Window.pack(side=TOP)

    Athlete_Window_RIGHT = Frame(Second_Fame,width=450,height=720,bg=LGrey,bd=5, highlightbackground='white')
    Athlete_Window_RIGHT.pack(side=LEFT)

    Athlete_Window_LEFT = Frame(Second_Fame,width=450,height=720,bg=LGrey,bd=5,highlightbackground=RGrey)
    Athlete_Window_LEFT.pack(side=RIGHT)

    canvas_Athlete_Window = Canvas(Athlete_Window_RIGHT,width=200,height=100, bg=LGrey,bd=0, highlightbackground=LGrey)
    canvas_Athlete_Window.pack(side = TOP)
    canvas_Athlete_Window2 = Canvas(Athlete_Window_LEFT,width=200,height=100, bg=LGrey,bd=0, highlightbackground=LGrey)
    canvas_Athlete_Window2.pack(side = TOP)
    canvas_Athlete_Window3= Canvas(Athlete_Window_LEFT,width=200,height=100, bg=LGrey,bd=0, highlightbackground=LGrey)
    canvas_Athlete_Window3.pack(side = TOP)

    Label_Athlete_Gender = Label(Athlete_Window_RIGHT,text='Create Athlete',bg=LGrey,fg='White',pady = 50,font=('Calibri', 15))
    Label_Athlete_Gender.pack(side=BOTTOM)
    Text_Athlete_Gender = Text(Athlete_Window_RIGHT, height = 1, width = 10)
    Text_Athlete_Gender.pack(side=RIGHT)

    Label_Athlete_Name = Label(Athlete_Window_RIGHT,text='Create Athlete',bg=LGrey,fg='White',pady = 2,font=('Calibri', 15))
    Label_Athlete_Name.pack(side=BOTTOM)
    Text_Athlete_Name = Text(Athlete_Window_RIGHT, height = 1, width = 10)
    Text_Athlete_Name.pack(side=RIGHT)

    Label_Athlete_Weight = Label(Athlete_Window_RIGHT,text='Create Athlete',bg=LGrey,fg='White',pady = 2,font=('Calibri', 15))
    Label_Athlete_Weight.pack(side=BOTTOM)
    Text_Athlete_Weight = Text(Athlete_Window_RIGHT, height = 1, width = 10)
    Text_Athlete_Weight.pack(side=RIGHT)

    Label_Athlete_Size = Label(Athlete_Window_RIGHT,text='Create Athlete',bg=LGrey,fg='White',pady = 2,font=('Calibri', 15))
    Label_Athlete_Size.pack(side=BOTTOM)
    Text_Athlete_Size = Text(Athlete_Window_RIGHT, height = 1, width = 10)
    Text_Athlete_Size.pack(side=RIGHT)

    Label_Athlete_ID = Label(Athlete_Window_LEFT,text='Create Athlete',bg=LGrey,fg='White',pady = 2,font=('Calibri', 15))
    Label_Athlete_ID.pack(side=BOTTOM)
    Text_Athlete_ID = Text(Athlete_Window_LEFT, height = 1, width = 10)
    Text_Athlete_ID.pack(side=RIGHT)


    Create_Athlete = Button(canvas_Athlete_Window)
    Create_Athlete.pack(side=BOTTOM)
    Change_Athlete= Button(canvas_Athlete_Window2)
    Change_Athlete.pack(side=BOTTOM)
    Delete_Athlete= Button(canvas_Athlete_Window3)
    Delete_Athlete.pack(side=BOTTOM)
    
    Active_Button(Create_Athlete,canvas_Athlete_Window,canvas_Athlete_Window,"Images\Create_Athlete_active.png","Images\Create_Athlete_inactive.png",Athlete_Window,LGrey,LEFT)
    Active_Button(Change_Athlete,canvas_Athlete_Window2,canvas_Athlete_Window2,"Images\Create_Athlete_active.png","Images\Create_Athlete_inactive.png",Athlete_Window,LGrey,LEFT)
    Active_Button(Delete_Athlete,canvas_Athlete_Window3,canvas_Athlete_Window3,"Images\Create_Athlete_active.png","Images\Create_Athlete_inactive.png",Athlete_Window,LGrey,LEFT)


