Button1 = Button(canvas_main)
Button1.grid(column=0,row=0)

Button2 = Button(canvas_main2)
Button2.grid(column=0,row=0)

Button3 = Button(canvas_main3)
Button3.grid(column=0,row=0)

Button4 = Button(canvas_main4)
